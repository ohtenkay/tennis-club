<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="cz.inqool.tennis-club">

        <class>cz.inqool.tennis_club.model.SurfaceType</class>

        <!-- Hibernate property to auto-detect entities in the specified packages -->
        <properties>
            <!-- H2 in-memory database -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:testdb"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value="password"/>

            <!-- Agroal connection pool -->
            <property name="hibernate.agroal.maxSize" value="20"/>

            <!-- Auto-detect entities from the classpath -->
            <property name="hibernate.archive.autodetection" value="class"/>

            <!-- display SQL in console -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.highlight_sql" value="true"/>

        </properties>

    </persistence-unit>
</persistence>
